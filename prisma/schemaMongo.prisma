generator client {
  provider = "prisma-client"
  output   = "../src/generated/prismaMongo"
  moduleFormat = "cjs"

}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_MONGO")
}

model parcela_data {
  id_parcela     Int              @id @map("_id")
  iotReadings    IotReading[]    
  @@map("parcela_data") 
}

type IotReading {
  id_iot         Int
  hora           DateTime
  image_url      String      
  image_result   String?      
  sensorReadings SensorReading[]  
}

type SensorReading {
  id_sensor      Int
  lectura        Float            
}